<h1>Learn about all the types of Cats</h1>


<% @cats.each do |cat| %>

<div class="cat_class">
  <h2><%= cat.name %></h2>
    <ul>
      <li><%= cat.age %> years old</li>
      <li><%= cat.color %> coloured cat</li>
    </ul>
    <div class="cat_description">
      <%= cat.description %>
    </div>

</div>
   <div>
    <span><%= link_to 'Show', cat %><br />
    <%= link_to 'Edit', edit_cat_path(cat) %><br />
    <%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %><span>
  </div>
<% end %>


<br />
<h3>Add a New Cat</h3>
<p>
<%= link_to 'New Cat', new_cat_path %>
</p>
