<h1>Learn about all the types of Cats</h1>


<% @cats.each do |cat| %>

<div class="cat_class">
  <h2><%= cat.name %></h2>
  <%=image_tag (cat.image_url) %>
    <ul>
      <li><%= cat.age %> years old</li>
      <li><%= cat.color %> coloured cat</li>
    </ul>
    <div class="cat_description">
      <%= cat.description %>
    </div>


   <div class="edith">
    <span><%= link_to 'Show', cat %><br />
    <%= link_to 'Edit', edit_cat_path(cat) %> <%= link_to 'Destroy |', cat, method: :delete, data: { confirm: 'Are you sure?' } %><span>
  </div>
</div>
<% end %>

<div class="static">
<h3>Add a New Cat</h3>
  <br /> <br />    <br /><br /><br /><br />
<p>
<%= link_to 'New Cat', new_cat_path %>
</p>
</div>